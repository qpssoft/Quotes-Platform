{
  "name": "quotes-platform",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "format": "prettier --write \"src/**/*.{ts,html,scss,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,json}\"",
    "validate:quotes": "node scripts/validate-quotes.js",
    "build:gh-pages": "ng build --configuration production --base-href /Quotes/",
    "predeploy": "npm run build:gh-pages && node -e \"const fs = require('fs'); fs.copyFileSync('dist/quotes-platform/browser/index.html', 'dist/quotes-platform/browser/404.html'); fs.writeFileSync('dist/quotes-platform/browser/.nojekyll', '');\"",
    "deploy:gh-pages": "npm run predeploy && gh-pages -d dist/quotes-platform/browser",
    "test:e2e": "cucumber-js tests/features --require-module ts-node/register --require tests/**/*.ts",
    "test:e2e:debug": "SLOWMO=500 HEADLESS=false npm run test:e2e",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.12",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.10",
    "@angular/cli": "^20.3.10",
    "@angular/compiler-cli": "^20.3.0",
    "@cucumber/cucumber": "^12.2.0",
    "@cucumber/pretty-formatter": "^2.4.1",
    "@playwright/test": "^1.56.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.10.1",
    "angular-eslint": "20.6.0",
    "eslint": "^9.39.0",
    "gh-pages": "^6.3.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.46.3"
  }
}
