# Root .gitignore for Quotes Platform Monorepo

# VS Code configuration (track MCP config)
.vscode/*
!.vscode/mcp.json
!.vscode/MCP_README.md
!.vscode/settings.json

# OS files
.DS_Store
Thumbs.db

# Temporary files
*.tmp
*.log
*.swp
*.swo
*~

# IDE files
.idea/
*.sublime-*

# Environment files
.env
.env.local

# Node modules (all workspaces)
node_modules/
/quotes-platform/node_modules/
/quotes-native/node_modules/
/shared-modules/node_modules/

# Build outputs
dist/
build/
/quotes-platform/dist/
/shared-modules/dist/

# React Native / Expo
.expo/
.expo-shared/

# iOS
/quotes-native/ios/Pods/
/quotes-native/ios/*.xcworkspace/xcuserdata/
/quotes-native/ios/*.xcodeproj/xcuserdata/
*.ipa

# Android
/quotes-native/android/.gradle/
/quotes-native/android/.idea/
/quotes-native/android/app/build/
*.apk
*.aab

# Test results
/quotes-platform/test-results
/quotes-platform/coverage
/quotes-native/__tests__/coverage
/shared-modules/coverage
