{
  "name": "buddhist-quotes-electron",
  "version": "2.0.0",
  "description": "Buddhist Quotes Desktop Application",
  "main": "dist/main/main.js",
  "author": "Buddhist Quotes Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build": "npm run build:main && npm run build:preload",
    "copy:renderer": "node -e \"require('fs-extra').copySync('../quotes-platform/dist/quotes-platform/browser', './renderer', {overwrite: true})\"",
    "build:all": "npm run build && npm run copy:renderer",
    "dev": "node scripts/dev.js",
    "start": "npm run build && electron .",
    "package:win": "npm run build:all && electron-builder --win",
    "package:mac": "npm run build:all && electron-builder --mac",
    "package:linux": "npm run build:all && electron-builder --linux",
    "package": "npm run build:all && electron-builder --win --mac --linux",
    "clean": "rimraf dist release"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "fs-extra": "^11.3.2",
    "rimraf": "^5.0.5",
    "sharp": "^0.34.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.buddhistquotes.desktop",
    "productName": "Buddhist Quotes",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "renderer/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.lifestyle"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    }
  }
}
