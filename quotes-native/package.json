{
  "name": "quotes-native",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "windows": "npx @react-native-community/cli run-windows",
    "test:windows": "jest --config jest.config.windows.js",
    "build:web": "expo export --platform web --output-dir dist",
    "deploy:gh-pages": "npm run build:web && gh-pages -d dist -t true"
  },
  "dependencies": {
    "@quotes/shared-modules": "1.0.0",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/bottom-tabs": "^7.8.5",
    "@react-navigation/native": "^7.1.20",
    "expo": "~54.0.25",
    "expo-av": "^16.0.7",
    "expo-haptics": "^15.0.7",
    "expo-status-bar": "~3.0.8",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-web": "^0.19.13",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "^4.18.0"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "react-native-windows": "^0.80.1",
    "typescript": "~5.9.2",
    "@rnx-kit/jest-preset": "^0.1.17",
    "gh-pages": "^6.1.0"
  },
  "private": true,
  "react-native-windows": {
    "init-windows": {
      "name": "QuotesNative",
      "namespace": "QuotesNative",
      "template": "cpp-app"
    }
  }
}
